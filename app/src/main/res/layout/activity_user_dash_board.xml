<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/barberproj1"
    tools:context=".UserDashBoard">

    <Button
        android:id="@+id/btn_book"
        android:layout_width="261dp"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="Booking"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_message"
        android:layout_width="261dp"
        android:layout_height="59dp"
        android:layout_below="@+id/btn_book"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Message"
        android:backgroundTint="@color/design_default_color_secondary"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_view_barber"
        android:layout_width="261dp"
        android:layout_height="59dp"
        android:layout_below="@+id/btn_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="All Barber"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_shop"
        android:layout_width="261dp"
        android:layout_height="59dp"
        android:layout_below="@+id/btn_view_barber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="Shop" />

    <Button
        android:id="@+id/btn_gallery"
        android:layout_width="269dp"
        android:layout_height="59dp"
        android:layout_below="@+id/btn_shop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="Gallery"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_rating"
        android:layout_below="@id/btn_gallery"
        android:layout_width="269dp"
        android:layout_height="59dp"
        android:textColor="@color/white"
        android:text="Rating"
        android:backgroundTint="@color/design_default_color_secondary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_all_order"
        android:layout_below="@id/btn_rating"
        android:layout_width="269dp"
        android:layout_height="59dp"
        android:textColor="@color/white"
        android:text="All Order"
        android:backgroundTint="@color/design_default_color_secondary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>